@model BlwTraining.ViewModels.TrainingSessionViewModels

@Html.HiddenFor(m => m.Id)

<div class="form-group">
    @Html.LabelFor(m => m.Name, new{@class="control-label"})
    @Html.TextBoxFor(m => m.Name, new{@class="form-control"})
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Description, new { @class = "control-label" })
    @Html.TextAreaFor(m => m.Description, new { @class = "form-control summernote" })
</div>


<div class="form-group">
    @Html.LabelFor(m => m.StartDate, new{@class="control-label"})
    @Html.Kendo().DatePickerFor(M => M.StartDate).HtmlAttributes(new{@class="form-control"})
</div>

<div class="form-group">
    @Html.LabelFor(m => m.EndDate, new{@class="control-label"})
    @Html.Kendo().DatePickerFor(m => m.EndDate).HtmlAttributes(new{@class="form-control"})
</div>

<div class="form-group">
    @Html.LabelFor(m => m.DaysAfterEndBeforeArchiving, new { @class = "control-label" })
    <div class="col-lg-2 col-xs-2">
        @Html.TextBoxFor(m => m.DaysAfterEndBeforeArchiving, new { @class = "form-control" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.MaximumNumberOfParticipants, new { @class = "control-label" })
    <div class="col-lg-2 col-xs-2">
        @Html.TextBoxFor(m => m.MaximumNumberOfParticipants, new { @class = "form-control" })
    </div>
</div>


@section Styles {
    @Styles.Render("~/plugins/summernoteStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/summernote")

    <script type="text/javascript">
        $(document).ready(function () {

            $('.summernote').summernote();

        });

    </script>
}